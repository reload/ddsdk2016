{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{% set classes = [
  'region',
  'region-' ~ region|clean_class,
] %}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
    <div class="container">
      <div class="site-logo--container">
        {% if is_track_page %}
          <a href="{{ track_frontpage_path }}" rel="home" class="track-logo site-logo">
            <img src="{{ '/themes/custom/mungo/assets/images/track/logo.svg' }}" alt="{{ 'Home - TRACK'|t }}"/>
          </a>
        {% else %}
          <a href="{{ path('<front>') }}" rel="home" class="site-logo">
            <img src="{{ dds_logo }}" alt="{{ 'Home'|t }}">
          </a>
        {% endif %}
      </div>
      {{ content }}
    </div>
  </div>
{% endif %}
